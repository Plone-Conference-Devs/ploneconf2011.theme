<!-- put in some logic to figure out what section you are in,
and display a different background per section -->

<script type="text/javascript">
if (document.body.className.match(/\bsection-front-page\b/)) {
    $.backstretch("bg-frontpage.jpg", {speed: 150});
    }
else {
    $.backstretch("buildings_bg.png", {speed: 150});
    }
    
</script>