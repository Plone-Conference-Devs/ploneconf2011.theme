/* homepage */
.template-home_page_view #social-links {
    display: none;
}

.template-home_page_view #visual-portal-wrapper {
    background: transparent none;
}

.template-home_page_view h2 {
    font-size: 67px;
}

.template-home_page_view #content {background: transparent none;}

.template-home_page_view #parent-fieldname-text p {
    margin: 0;
    padding: 0;
    color: #ffffff;
    background: transparent none;
    font-size: 24px;
}

#home-text {
    float: right;
    width: 400px;
    margin-top: 250px;
}

/* homepage slideshow */
#slideshow {
    width: 460px;
    height: 460px;
    border: none;
    background-color: #3c4d47;
    border-radius: 400px;
}

#slideshow .slideWrapper {
    border: 30px solid #3c4d47;
    border-radius: 400px;
    width: 400px;
    height: 400px;
    overflow: hidden;
}

.imageCaption {
    width: 350px;
    margin: 300px 0 0 45px;
    background: transparent none;
}

.imageCaption .imageTitle {
    font-family: SkinBonesRegular, DIN, Futura, "Trebuchet MS", Arial, sans-serif;
    font-size: 220%;
}

.imageCaption .imageDescrip {
    padding: 10px 0 0 25px;
    font-size: 27px;
    line-height: 25px;
}

/* authoring */
#content .configlets li {
    display: block;
}

body#content {
    background-color: #ffffff;
    color: #000000;
}



/* ----- for the speaker rollover ----- */

ul.spkr {
    float: left;
    list-style: none;
    margin: 0; padding: 10px;
    width: 360px;
    font-size: .8em;
}
ul.spkr li {
    margin: 0; padding: 5px;
    float: left;
    position: relative;  /* Set the absolute positioning base coordinate */
    width: 80px;
    height: 80px;
    list-style: none;
}
ul.spkr li img {
    /* width: 100px; height: 100px; Set the small thumbnail size */
    -ms-interpolation-mode: bicubic; /* IE Fix for Bicubic Scaling */
    border: 1px solid #ddd;
    padding: 5px;
    background: #f0f0f0;
    position: absolute;
    left: 0; top: 0;
}
ul.spkr li div img {
    position: relative; border: 0px; background: transparent; padding: 0px;
}
ul.spkr li div {position: relative; left: -99999px; background: #fff; width: 200px; padding: 10px;}
ul.spkr li div.hover {position: relative; left: 50%; top: 50%; z-index: 10; }
ul.spkr li a:hover {
    border: none; /* Get rid of border on hover */
}


